// https://www.typescriptlang.org/tsconfig/
{
	// ./node_modules/@alanscodelog/tsconfigs/tsconfig.json
	// https://github.com/AlansCodeLog/tsconfigs
	"extends": [
		"./.nuxt/tsconfig.json",
		"@alanscodelog/tsconfigs"
	],
	"compilerOptions": {
		"types": [
			"node",
			"unplugin-icons/types/vue3",
			"vite/client"
		],
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"src/**/*.js",
	],
	"vueCompilerOptions": {
		"strictTemplates": true,
	}
}
